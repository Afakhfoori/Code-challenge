@model BunningsCataloge.Models.ImportFileModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h1 class="display-4">Welcome to Mega merge software</h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h2>Company A:</h2>
        <div class="form-group">
            <label asp-for="SuppliersA"> Supplier File</label>
            <input asp-for="SuppliersA" class="form-control" />
            <span asp-validation-for="SuppliersA" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CatalogA">Catalog File</label>
            <input asp-for="CatalogA" class="form-control" />
            <span asp-validation-for="CatalogA" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BarcodeA">Barcodes File:</label>
            <input asp-for="BarcodeA" class="form-control" />
            <span asp-validation-for="BarcodeA" class="text-danger"></span>
        </div>

        <h2>Company B:</h2>

        <div class="form-group">
            <label asp-for="SuppliersB"> Supplier File</label>
            <input asp-for="SuppliersB" class="form-control" />
            <span asp-validation-for="SuppliersB" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CatalogB">Catalog File</label>
            <input asp-for="CatalogB" class="form-control" />
            <span asp-validation-for="CatalogB" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BarcodeB">Barcodes File:</label>
            <input asp-for="BarcodeB" class="form-control" />
            <span asp-validation-for="BarcodeB" class="text-danger"></span>
        </div>
        <div class="form-control">
            <input type="submit" value="Merge" />
        </div>
    }

</div>
